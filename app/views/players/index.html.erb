<%= event_source('PlayerProjection') %>
<h1>Listing Players for <%= @team.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.position %></td>
        <td><%= player.number %></td>
        <td><%= link_to 'Show', team_player_path(@team, player) %></td>
        <td><%= link_to 'Edit', edit_team_player_path(@team, player) %></td>
        <td><%= link_to 'Destroy', team_player_path(@team, player), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_team_player_path(@team) %>
